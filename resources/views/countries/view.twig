{% extends 'templates/app.twig' %}

	{% block content %}
<div class="row">
	<div class="col-md-10">
		<div id="postlist">
			<div class="panel">
                <div class="panel-heading">
                    <div class="text-center">
                        <div class="row">
                            <div class="col-sm-9">
                                <h3 class="pull-left">{{ country.name }} - {{ country.code }}
                                </h3>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <h2>List of users from {{ country.name }}</h2>
                    <ul>
                        {% for user in country.users %}
                        <li>
                            <a href="{{ path_for('users.view', {'id': user.id } ) }}">{{user.first_name}} {{user.last_name}}</a>
                        </li>
                        {% endfor %}
                    </ul>
                </div>
            <!-- <div class="panel-footer">
                <span class="label label-default">Welcome</span> <span class="label label-default">Updates</span> <span class="label label-default">July</span>
            </div> -->
        </div>
        
       </div>
    </div>
    <!-- Only the admin can edit and delete countries -->
     {% if auth.user.role_id <= 3 %}
		<div class="text-center">
            <p><a href="{{ path_for('countries.edit', {'id': country.id } ) }}" class="btn btn-primary">Edit country</a>
                </p>
                <p> <a onclick="return confirm('Are you sure you wish to delete this Country?');"  href="{{ path_for('countries.delete', {'id': country.id } ) }}" class="btn btn-warning">Delete country</a>
        
                </p>
          </div>
             
    {% endif %}
    </div>
        <div class="col-md-1"></div>
        <div class="col-md-3">
        </div>
        <div class="col-md-1">
        </div>
    </div>
{% endblock %}
