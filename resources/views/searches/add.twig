{% extends 'templates/app.twig' %}
{% block content %}
    <div class="row">
        <div class="col-md-10">
            <div id="searchlist">
                <div class="panel">
                    <div class="panel-heading">
                        <div class="text-center">
                            <div class="row">
                                {% if(searchTerm) %}
                                    <div class="col-sm-9">
                                        <h3 class="pull-left">Search results for "{{ searchTerm }}"</h3>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="span12">
                                <div class="" id="loginModal">
                                    <div class="modal-body">
                                        <div class="well">
                                            <ul class="nav nav-tabs">
                                                <li class="active">
                                                    <a data-toggle="tab" href="#users">Users</a>
                                                </li>
                                                <li>
                                                    <a data-toggle="tab" href="#skills">Skills</a>
                                                </li>
                                            </ul>
                                            <div class="tab-content" id="myTabContent">
                                                <div class="tab-pane active in" id="users">
                                                    <h4>
                                                        List of users that match the search
                                                    </h4>
                                                    {% for user in users %}
                                                        <div class="media">
                                                            <div class="media-body">
                                                                <a href=" {{ path_for('users.view', {'id': user.id}) }}">
                                                                    {{user.first_name}}
                                                                    {{user.last_name}}
                                                                </a>
                                                                {{user.state.name}}
                                                            </div>
                                                        </div>
                                                    {% endfor %}
                                                </div>
                                                <div class="tab-pane fade" id="skills">
                                                    <h4>
                                                        Select a skill below to see users that have that skill
                                                    </h4>
                                                    {% for skill in skills %}
                                                        <div class="media">
                                                            <div class="media-body">
                                                                <a href=" {{ path_for('skills.view', {'id': skill.id}) }}">{{skill.name}}</a>
                                                            </div>
                                                        </div>
                                                    {% endfor %}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-1"></div>
        <div class="col-md-3"></div>
        <div class="col-md-1"></div>
    </div>
{% endblock %}
